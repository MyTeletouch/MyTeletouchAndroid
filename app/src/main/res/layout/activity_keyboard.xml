<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/common_background"
    tools:context="com.madeit.julian.myteletouch.KeyboardActivity">

    <EditText
        android:id="@+id/dummyEdit"
        android:layout_marginTop="60dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:clickable="false"
        android:imeOptions="actionNone|flagNoEnterAction|flagNoExtractUi"
        android:singleLine="false"
        android:inputType="textNoSuggestions|textVisiblePassword|textMultiLine"/>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="60dp"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:background="@color/common_background">
    </FrameLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="top|center_horizontal">
        <ImageButton
            android:id="@+id/mouseButton"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:src="@drawable/mouse"/>
        <ImageButton
            android:id="@+id/keyboardButton"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:src="@drawable/keyboardpressed"/>
        <ImageButton
            android:id="@+id/joystickButton"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:src="@drawable/joystick"/>
    </LinearLayout>
</FrameLayout>
